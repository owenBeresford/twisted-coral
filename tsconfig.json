{
  "compilerOptions": {
    "outDir": "./dist",
    "jsx": "react-jsx",
    "noEmit": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "module": "esnext",
    "allowJs": true,
    "strict": true,
    "target": "es2022",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
	"strictFunctionTypes":true,
    "strictNullChecks": false,
    "types": [],
    "lib": [ "es2022" ]
  },

  "files": ["./src/index.ts"],
  "exclude": ["./build", "./dist", "./node_modules"],
  "include": ["*.ts" ]
}
